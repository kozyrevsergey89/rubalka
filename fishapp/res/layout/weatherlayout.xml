<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="700dip"
        >
        
        <ImageView 
            style="@style/weatherstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bigweather"
            android:contentDescription="@drawable/big_images_list"/>
        <ImageView
            style="@style/weatherstyle" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bigmoon"
            android:layout_toRightOf="@id/bigweather"/>
        <TextView 
            style="@style/weatherstyle"
            android:id="@+id/weathertext"
            android:lines="4"
            android:layout_below="@id/bigweather"
            />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="300dip"
        android:orientation="horizontal"
        android:layout_weight="4"
        >
        <ImageView 
            style="@style/weatherstyle"
            android:layout_weight="1"
            android:id="@+id/smallweather1"/>
        <ImageView
            style="@style/weatherstyle" 
            android:layout_weight="1"
            android:id="@+id/smallweather2"/>
        <ImageView 
            style="@style/weatherstyle"
            android:layout_weight="1"
            android:id="@+id/smallweather3"/>
        <ImageView 
            style="@style/weatherstyle"
            android:layout_weight="1"
            android:id="@+id/smallweather4"/>
        
    </LinearLayout>

</LinearLayout>